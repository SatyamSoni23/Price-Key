                    android:gravity="center" />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/metal8"
                android:layout_width="0dp"
                android:layout_height="220dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/metal6"
                app:layout_constraintLeft_toRightOf="@id/metal7"
                app:cardBackgroundColor="@color/text_color">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color_dark"/>
                <ImageView
                    android:id="@+id/m8_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/downarraw"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"/>
