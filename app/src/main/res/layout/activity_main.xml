                    android:gravity="center" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color_dark"
                    android:layout_gravity="bottom"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/metal7"
                android:layout_width="0dp"
                android:layout_height="220dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/metal5"
                app:layout_constraintRight_toLeftOf="@id/metal8"
                app:cardBackgroundColor="@color/text_color"
                app:cardPreventCornerOverlap="true">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color_dark"/>
                <ImageView
                    android:id="@+id/m7_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/uparrow"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/m7"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/nickel"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="20dp"/>
