                    android:layout_height="1dp"
                    android:background="@color/text_color_dark"
                    android:layout_gravity="bottom"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/metal6"
                android:layout_width="0dp"
                android:layout_height="220dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/metal4"
                app:layout_constraintLeft_toRightOf="@id/metal5"
                app:cardBackgroundColor="@color/text_color">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color_dark"/>
                <ImageView
                    android:id="@+id/m6_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/downarraw"
