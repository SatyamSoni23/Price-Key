                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:text="XXXXXX\nSilver"
                    android:textSize="20dp"
                    app:fontFamily="@font/ubunturegular"
                    android:gravity="center" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color_dark"
                    android:layout_gravity="bottom"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/metal3"
                android:layout_width="0dp"
                android:layout_height="220dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/metal1"
                app:layout_constraintRight_toLeftOf="@id/metal4"
                app:cardBackgroundColor="@color/text_color"
                app:cardPreventCornerOverlap="true">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color_dark"/>
                <ImageView
                    android:id="@+id/m3_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/uparrow"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/m3"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/platinum"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="20dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_color_dark"
                    android:layout_gravity="right"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/m3_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:text="XXXXXX\nPlatinum"
                    android:textSize="20dp"
                    app:fontFamily="@font/ubunturegular"
                    android:gravity="center" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color_dark"
                    android:layout_gravity="bottom"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/metal4"
                android:layout_width="0dp"
                android:layout_height="220dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/metal2"
                app:layout_constraintLeft_toRightOf="@id/metal3"
                app:cardBackgroundColor="@color/text_color">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color_dark"/>
                <ImageView
                    android:id="@+id/m4_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/downarraw"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="20dp"
