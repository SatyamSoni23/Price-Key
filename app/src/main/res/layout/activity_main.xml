                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:text="XXXXXX\nPalladium"
                    android:textSize="20dp"
                    app:fontFamily="@font/ubunturegular"
                    android:gravity="center" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color_dark"
                    android:layout_gravity="bottom"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/metal5"
                android:layout_width="0dp"
                android:layout_height="220dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/metal3"
                app:layout_constraintRight_toLeftOf="@id/metal6"
                app:cardBackgroundColor="@color/text_color"
