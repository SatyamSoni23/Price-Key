<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/app_name"
        app:fontFamily="@font/lobster"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:gravity="center_horizontal"
        android:text="Powered by Innogenix"
        android:textColor="@color/text_color"
        app:fontFamily="@font/ubunturegular"
        android:textSize="15sp"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tagline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20sp"
        android:background="@drawable/home"
        android:padding="15dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/metal1"
                android:layout_width="0dp"
                android:layout_height="220dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/metal2"
                app:cardBackgroundColor="@color/text_color"
                app:cardPreventCornerOverlap="true"
                android:foregroundGravity="center">
                <ImageView
                    android:id="@+id/m1_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/uparrow"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/m1"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/gold"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="20dp"
                    android:clickable="true"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_color_dark"
                    android:layout_gravity="right"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/m1_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:text="XXXXXX\nGold"
                    android:textSize="20dp"
                    app:fontFamily="@font/ubunturegular"
                    android:gravity="center" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color_dark"
                    android:layout_gravity="bottom"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/metal2"
                android:layout_width="0dp"
                android:layout_height="220dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/metal1"
                app:cardBackgroundColor="@color/text_color">
                <ImageView
                    android:id="@+id/m2_status"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/downarraw"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"/>
